<%= image_tag 'students.png', width:'400px', height:'300px' %>
<h2>Students</h2>

<div class="container-fluid">
  <div class="row">

<table class="table table-hover .col-md-6 ">
<thead>
    <tr class="table-success", align="center">
      <th>Name</th>
      <th>Email</th>

    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', student, class: 'btn btn-success btn-sm btn-block' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-danger btn-sm btn-block' %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-info btn-sm btn-block' %></td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>
</div>
